{
    "compilerOptions": {
        "target": "ES2017",
        "lib": ["ES2017"],
        "rootDir": "src",
        "outDir": "dist",
        "module": "commonjs",
        "moduleResolution": "node",
        "strict": false,
        "declaration": true,
        "sourceMap": true,
        "inlineSources": true,
        "types": ["node", "jest"],
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true
    },
    "include": ["src/**/*", "tests/**/*"],
    "exclude": ["**/node_modules/*"]
}
